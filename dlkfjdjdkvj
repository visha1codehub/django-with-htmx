/* Global Neon Colors */
.bg-neon-dark {
    background-color: #212121; /* Dark Background */
}
.text-neon {
    color: #33CCFF; /* Neon Blue */
    text-shadow: 0px 0px 5px #33CCFF, 0px 0px 10px #33CCFF, 0px 0px 15px #33CCFF, 0px 0px 20px #33CCFF, 0px 0px 30px #33CCFF;
}

.btn-neon {
    background: linear-gradient(to bottom, #33CCFF, #0099CC);
    background-size: 100% 200%;
    transition: background-position 0.3s ease-out;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    box-shadow: 0px 0px 5px #33CCFF, 0px 0px 10px #33CCFF, 0px 0px 15px #33CCFF, 0px 0px 20px #33CCFF, 0px 0px 30px #33CCFF;
}
.btn-neon:hover {
    background-position: 100% 100%;
}

/* Optional: More neon elements */
.neon-outline {
    color: #33CCFF;
    text-shadow: none;
    border: 2px solid #33CCFF;
    border-radius: 5px;
    padding: 5px 10px;
    transition: background-color 0.3s ease-out;
}
.neon-outline:hover {
    background-color: rgba(51, 204, 255, 0.2);
}

/* Neon Glow on Hover for Links */
a.neon-link {
    color: #33CCFF;
    text-decoration: none;
    transition: color 0.3s ease-out;
}
a.neon-link:hover {
    color: #FFFFFF;
    text-shadow: 0px 0px 5px #33CCFF, 0px 0px 10px #33CCFF, 0px 0px 15px #33CCFF;
}

/* Adding Neon Effect to Form Elements */
input.neon-input, textarea.neon-input {
    border: 2px solid #33CCFF;
    border-radius: 5px;
    padding: 10px;
    background-color: #212121;
    color: #33CCFF;
}
input.neon-input:focus, textarea.neon-input:focus {
    box-shadow: 0px 0px 5px #33CCFF, 0px 0px 10px #33CCFF, 0px 0px 15px #33CCFF;
}

/* Adding Neon Effect to Button on Hover for General Use */
.btn-neon-general {
    background-color: #212121;
    color: #33CCFF;
    border: 2px solid #33CCFF;
    border-radius: 5px;
    padding: 10px 20px;
    cursor: pointer;
    transition: background-color 0.3s ease-out, box-shadow 0.3s ease-out;
}
.btn-neon-general:hover {
    background-color: rgba(51, 204, 255, 0.2);
    box-shadow: 0px 0px 5px #33CCFF, 0px 0px 10px #33CCFF, 0px 0px 15px #33CCFF;
}





